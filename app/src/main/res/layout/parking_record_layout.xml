<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/modify_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical|right"
                    android:textSize="20sp"
                    android:id="@+id/record_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:id="@+id/record_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                style="@style/my_text"
                android:text="|"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical|right"
                    android:textSize="20sp"
                    android:id="@+id/record_stop_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:id="@+id/record_stop_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/inquire_record"
            android:text="@string/inquire"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.example.simple.utils.AllItemListView
                android:id="@+id/record_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/record_more"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/show_more"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>